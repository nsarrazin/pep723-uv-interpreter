{
  "name": "pep723-uv-interpreter",
  "displayName": "Auto-interpreter for PEP723 (uv)",
  "description": "Automatically sets your interpreter with uv when working with scripts containing inline metadata (PEP 723)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "grammars": [
      {
        "scopeName": "source.python.script-metadata-toml",
        "path": "./syntaxes/python-script-metadata-injection.tmLanguage.json",
        "injectTo": ["source.python"]
      }
    ],
    "commands": [
      {
        "command": "pep723.pickInterpreter",
        "title": "PEP723: Pick Interpreter"
      },
      {
        "command": "pep723.createScript",
        "title": "PEP723: Create New Script"
      },
      {
        "command": "pep723.autoComment",
        "title": "PEP723: Auto Comment",
        "enablement": "editorTextFocus && editorLangId == python"
      }
    ],
    "keybindings": [
      {
        "command": "pep723.autoComment",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == python && config.pep723.autoCommentEnabled"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "pep723.autoComment",
          "when": "never"
        }
      ]
    },
    "configuration": {
      "title": "PEP723 Interpreter Picker",
      "properties": {
        "pep723.enableAutoPick": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable automatic interpreter picking on file open or switch."
        },
        "pep723.autoCommentEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable commenting on enter inside PEP 723 script blocks."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nsarrazin/pep723-uv-interpreter"
  },
  "icon": "icon.png",
  "publisher": "nsarrazin",
  "keywords": [
    "vscode",
    "python",
    "interpreter",
    "uv",
    "pep723"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.8.3"
  }
}
